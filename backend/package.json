{
  "name": "placemate-backend",
  "version": "1.0.0",
  "description": "Production backend for PlaceMate job tracker - matches frontend exactly",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "module-alias": "^2.2.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
